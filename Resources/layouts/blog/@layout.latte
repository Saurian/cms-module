{extends ../@layout.latte}

{block #layout}
<div class="col-md-8">

	{control flashMessage}
	{block #contentTop}{/block}
	{include #content}
	{block #contentBottom}{/block}

	<hr />

	<small class="muted">
		{control itemInfo $presenter->route}
	</small>
</div>

<div class="col-md-4">
	<div class="well">
		{block #panel}
		<h2><a href="{plink this special=>'tags'}">{_Tags}</a></h2>
		{control tagCloud}
		{/block}
	</div>
</div>
